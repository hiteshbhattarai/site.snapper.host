@page
@model site.snapper.iam.host.ApiResources.IndexModel
@{
}

<div class="clients-page">
   

    <div class="row">
        <div class="col-md-6">
            <form class="row">
                <div class="form-group display-flex">
                    <input class="form-control" placeholder="Filter" id="filter" name="filter" type="text" value="@Model.Filter" autofocus />
                    <a asp-page="/Admin/ApiResources/New" class="btn btn-success admin-new-button">New</a>
                </div>

            </form>
         
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Display Name</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach(var scope in Model.Scopes)
                    {
                        <tr>
                            <td><a asp-page="/Admin/ApiResources/Edit" asp-route-id="@scope.Name">@scope.Name</a></td>
                            <td>@scope.DisplayName</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
